<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="PrefEntry_Container">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">?android:listPreferredItemPaddingLeft</item>
		<item name="android:paddingRight">?android:listPreferredItemPaddingLeft</item>
		<item name="android:minHeight">?android:listPreferredItemHeight</item>
		<item name="android:background">?android:selectableItemBackground</item>
	</style>

	<style name="PrefEntry_Container.Vertical">
		<item name="android:orientation">vertical</item>
	</style>

	<style name="PrefEntry_Title">
		<item name="android:textColor">?android:colorForeground</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="PrefEntry_Title.FillRemainingWidth">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center_vertical</item>
	</style>

	<style name="PrefEntry_Title.WithSummary">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

	<style name="PrefEntry_Summary">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">?android:textColorSecondary</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="PrefEntry_Color">
		<item name="android:layout_width">32dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>

	<style name="PrefEntry_Checkbox">
		<item name="android:layout_width">32dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:layout_gravity">end|center_vertical</item>
		<item name="android:clickable">false</item>
		<item name="android:focusable">false</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

</resources>