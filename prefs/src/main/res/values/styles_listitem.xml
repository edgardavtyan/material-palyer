<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="DialogListItem_Container">
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:background">?android:selectableItemBackground</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="DialogListItem_RadioButton">
		<item name="android:layout_width">32dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:layout_marginRight">16dp</item>
		<item name="android:layout_marginLeft">24dp</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:clickable">false</item>
		<item name="android:focusable">false</item>
		<item name="android:background">@null</item>
	</style>

	<style name="DialogListItem_Title">
		<item name="android:textColor">?android:colorForeground</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="DialogListItem_Description">
		<item name="android:layout_marginLeft">72dp</item>
		<item name="android:layout_marginRight">24dp</item>
		<item name="android:layout_marginTop">-4sp</item>
		<item name="android:textColor">?android:textColorSecondary</item>
	</style>

</resources>