<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="DialogListItem_Container">
		<item name="android:paddingTop">8dp</item>
		<item name="android:paddingBottom">8dp</item>
		<item name="android:background">?android:selectableItemBackground</item>
		<item name="android:clickable">true</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="DialogListItem_RadioButton">
		<item name="android:layout_width">32dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:background">@android:color/transparent</item>
		<item name="android:clickable">false</item>
		<item name="android:focusable">false</item>
	</style>

	<style name="DialogListItem_InfoContainer">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="DialogListItem_Title">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">18sp</item>
		<item name="android:textColor">#000</item>
	</style>

	<style name="DialogListItem_Title.Simple">
		<item name="android:textColor">?android:colorForeground</item>
		<item name="android:layout_marginLeft">16dp</item>
		<item name="android:layout_gravity">center_vertical</item>
	</style>

	<style name="DialogListItem_Title.Description">
		<item name="android:layout_marginTop">5dp</item>
	</style>

	<style name="DialogListItem_Description">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>

</resources>