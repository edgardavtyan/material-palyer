<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.edavtyan.materialplayer"
	>

	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name="com.edavtyan.materialplayer.App"
		android:allowBackup="true"
		android:label="@string/app_name"
		android:icon="@mipmap/ic_launcher"
		android:theme="@style/AppTheme"
		android:persistent="true"
		>

		<activity
			android:name=".ui.main.MainActivity"
			android:launchMode="singleTop"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<action android:name="com.edavtyan.materialplayer.app.close" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.prefs.PrefActivity"
			android:launchMode="singleTop"
			>
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.detail.artist_detail.ArtistDetailActivity"
			android:theme="@style/AppTheme.Transparent"
			/>

		<activity
			android:name=".ui.detail.album_detail.AlbumDetailActivity"
			android:theme="@style/AppTheme.Transparent"
			/>

		<activity
			android:name=".ui.now_playing.NowPlayingActivity"
			android:launchMode="singleTop"
			android:theme="@style/AppTheme.Transparent"
			>
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.now_playing_queue.NowPlayingQueueActivity"
			android:launchMode="singleTop"
			>
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity
			android:name=".ui.audio_effects.AudioEffectsActivity"
			android:launchMode="singleTop"
			>
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".ui.search.SearchActivity" />

		<service
			android:name=".service.PlayerService"
			android:enabled="true"
			/>

		<receiver android:name=".service.receivers.MediaButtonReceiver">
			<intent-filter>
				<action android:name="android.intent.action.MEDIA_BUTTON" />
			</intent-filter>
		</receiver>

	</application>

</manifest>
