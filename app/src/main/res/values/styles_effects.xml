<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="AudioEffects_TitleWidth">100dp</dimen>
    
    <style name="AudioEffects_Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/spacing_tiny</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
    </style>

    <style name="AudioEffects_SectionEqualizer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="AudioEffects_SectionFx" parent="AudioEffects_SectionEqualizer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="AudioEffects_SectionSwitch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AudioEffects_SeekbarFx">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>