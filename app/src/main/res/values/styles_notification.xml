<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Notification_Wrapper">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">@color/white</item>
	</style>

	<style name="Notification_Art">
		<item name="android:layout_width">64dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_marginRight">8dp</item>
		<item name="android:contentDescription">@string/description_art</item>
		<item name="android:src">@drawable/fallback_cover</item>
	</style>

	<style name="Notification_Text_Wrapper">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="Notification_Title">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">#000</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:text">@string/notification_defaultText_title</item>
	</style>

	<style name="Notification_Info">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:textColor">#777</item>
		<item name="android:singleLine">true</item>
		<item name="android:text">@string/notification_defaultText_info</item>
	</style>

	<style name="Notification_Control">
		<item name="android:layout_width">40dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:padding">4dp</item>
		<item name="android:background">@drawable/ripple_notification</item>
		<item name="android:scaleType">fitCenter</item>
		<item name="android:tint">#000</item>
	</style>

	<style name="Notification_Control.Play_Pause">
		<item name="android:padding">6dp</item>
	</style>

	<style name="Notification_Control.Fast_Forward">
		<item name="android:layout_marginRight">@dimen/spacing_tiny</item>
	</style>

	<style name="Notification_Control.Nougat">
		<item name="background">@null</item>
	</style>

	<style name="Notification_Control.Nougat.Fast_Forward">
		<item name="android:layout_marginRight">@dimen/spacing_tiny</item>
	</style>

	<style name="Notification_Control.Nougat.Play_Pause">
		<item name="android:padding">6dp</item>
	</style>

</resources>
