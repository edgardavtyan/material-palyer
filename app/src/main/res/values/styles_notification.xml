<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="notification_wrapper">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="notification_art">
        <item name="android:layout_width">@dimen/size_medium</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/spacing_tiny</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:contentDescription">@string/description_art</item>
        <item name="android:src">@drawable/fallback_cover_listitem</item>
    </style>
    
    <style name="notification_text_wrapper">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="notification_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/notification_defaultText_title</item>
    </style>

    <style name="notification_info">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#777</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">@string/notification_defaultText_info</item>
    </style>

    <style name="notification_control">
        <item name="android:layout_width">@dimen/size_medium</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/ripple_notification</item>
        <item name="android:tint">#000</item>
    </style>

</resources>