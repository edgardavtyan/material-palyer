<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Detail_MainWrapper">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="Detail_Art">
		<item name="android:layout_width">120dp</item>
		<item name="android:layout_height">120dp</item>
		<item name="android:layout_margin">@dimen/spacing_medium</item>
	</style>

	<style name="Detail_Title">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/font_medium</item>
		<item name="android:textColor">?textColorPrimary</item>
	</style>

	<style name="Detail_Info_Top">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/font_normal</item>
		<item name="android:textColor">?textColorSecondary</item>
		<item name="android:textStyle">italic</item>
	</style>

</resources>