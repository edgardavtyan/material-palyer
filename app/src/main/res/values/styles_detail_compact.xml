<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Detail_Art_Wrapper">
		<item name="android:background">@android:drawable/dialog_holo_light_frame</item>
	</style>

	<style name="Detail_Art">
		<item name="android:scaleType">centerCrop</item>
	</style>

	<style name="Detail_TextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginTop">@dimen/spacing_very_tiny</item>
		<item name="android:paddingRight">@dimen/spacing_tiny</item>
		<item name="android:textSize">@dimen/font_normal</item>
	</style>

	<style name="Detail_Title" parent="Detail_TextView">
		<item name="android:textColor">?textColorContrastPrimary</item>
		<item name="android:maxLines">3</item>
	</style>

	<style name="Detail_Info" parent="Detail_TextView">
		<item name="android:textColor">?textColorContrastSecondary</item>
		<item name="android:textStyle">italic</item>
	</style>

</resources>