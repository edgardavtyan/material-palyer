<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Detail_MainWrapper">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
	</style>

	<style name="Detail_Art">
		<item name="android:layout_width">130dp</item>
		<item name="android:layout_height">130dp</item>
		<item name="android:layout_margin">@dimen/spacing_tiny</item>
		<item name="android:background">@android:drawable/dialog_holo_light_frame</item>
	</style>

	<style name="Detail_TextView">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/font_normal</item>
		<item name="android:paddingRight">@dimen/spacing_tiny</item>
	</style>

	<style name="Detail_Title" parent="Detail_TextView">
		<item name="android:layout_marginTop">@dimen/spacing_tiny</item>
		<item name="android:textColor">?textColorPrimary</item>
		<item name="android:maxLines">3</item>
	</style>

	<style name="Detail_Info_Top" parent="Detail_TextView">
		<item name="android:layout_marginTop">4dp</item>
		<item name="android:textColor">?textColorSecondary</item>
		<item name="android:textStyle">italic</item>
	</style>

	<style name="Detail_Info_Bottom" parent="Detail_Info_Top">
		<item name="android:layout_marginTop">8dp</item>
	</style>

	<style name="Detail_Divider">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">1dp</item>
		<item name="android:background">#ddd</item>
	</style>

</resources>