<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="notification_big_art">
		<item name="android:layout_width">120dp</item>
		<item name="android:layout_height">120dp</item>
		<item name="android:src">@drawable/fallback_cover</item>
	</style>

	<style name="notification_big_rightContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="notification_big_rightTopContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="notification_big_infoContainer">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="notification_big_close">
		<item name="android:layout_width">48dp</item>
		<item name="android:layout_height">48dp</item>
		<item name="android:background">@drawable/ripple_notification</item>
		<item name="android:src">@drawable/ic_cross</item>
	</style>

	<style name="notification_big_title">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/spacing_tiny</item>
		<item name="android:layout_marginTop">@dimen/spacing_tiny</item>
		<item name="android:text">@string/notification_defaultText_title</item>
		<item name="android:textColor">#000</item>
		<item name="android:textSize">@dimen/font_normal</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="notification_big_info">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginLeft">@dimen/spacing_tiny</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:textColor">#555</item>
		<item name="android:singleLine">true</item>
	</style>

	<style name="notification_big_info.artist">
		<item name="android:text">@string/notification_defaultText_info</item>
	</style>

	<style name="notification_big_controlsContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:paddingBottom">@dimen/spacing_tiny</item>
		<item name="android:paddingLeft">@dimen/spacing_tiny</item>
		<item name="android:paddingRight">@dimen/spacing_tiny</item>
		<item name="android:orientation">horizontal</item>
	</style>

	<style name="notification_big_control">
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">32dp</item>
		<item name="android:layout_weight">1</item>
		<item name="android:layout_gravity">bottom</item>
		<item name="android:background">@drawable/ripple_notification</item>
		<item name="android:drawSelectorOnTop">true</item>
	</style>

</resources>