<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="nowplayingBar_container">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">@dimen/size_large</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:background">?colorPrimary</item>
	</style>

	<style name="nowplayingBar_art">
		<item name="android:layout_width">@dimen/size_large</item>
		<item name="android:layout_height">@dimen/size_large</item>
	</style>

	<style name="nowplayingBar_infoWrapper">
		<item name="android:paddingLeft">@dimen/spacing_medium</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:orientation">vertical</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="nowplayingBar_playPause">
		<item name="android:padding">8dp</item>
		<item name="android:background">@drawable/ripple_primary</item>
		<item name="vc_endDrawable">@drawable/ic_pause_to_play</item>
		<item name="vc_startDrawable">@drawable/ic_play_to_pause</item>
		<item name="vc_foregroundTint">?textColorContrastPrimary</item>
		<item name="vc_autoStartAnimation">true</item>
	</style>

	<style name="nowplayingBar_title">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">@dimen/font_medium</item>
		<item name="android:textColor">?textColorContrastPrimary</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="nowplayingBar_info" parent="nowplayingBar_title">
		<item name="android:textColor">?textColorContrastSecondary</item>
		<item name="android:textSize">@dimen/font_small</item>
	</style>

</resources>
