<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="listitem_container">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">?attr/listPreferredItemHeight</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">?listPreferredItemPaddingLeft</item>
		<item name="android:paddingRight">?listPreferredItemPaddingRight</item>
		<item name="android:background">?attr/selectableItemBackground</item>
		<item name="android:clickable">true</item>
		<item name="android:focusable">true</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="listitem_container.compact">
		<item name="android:layout_height">?listPreferredItemHeightSmall</item>
	</style>

	<style name="listitem_primary">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
		<item name="android:textColor">?textColorPrimary</item>
		<item name="android:textSize">@dimen/font_normal</item>
	</style>

	<style name="listitem_secondary" parent="listitem_primary">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">?textColorSecondary</item>
		<item name="android:textSize">@dimen/font_small</item>
	</style>

	<style name="listitem_secondary.compact">
		<item name="android:visibility">gone</item>
	</style>

</resources>
