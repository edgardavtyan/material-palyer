<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="CollapsingHeader_Header">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">?android:windowBackground</item>
	</style>

	<style name="CollapsingHeader_Art">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:scaleType">centerCrop</item>
		<item name="android:layout_gravity">bottom</item>
	</style>

	<style name="CollapsingHeader_ArtBack" parent="CollapsingHeader_Art">
		<item name="android:scaleType">centerCrop</item>
	</style>

	<style name="CollapsingHeader_TextContainer">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">vertical</item>
		<item name="android:padding">@dimen/spacing_medium</item>
	</style>

	<style name="CollapsingHeader_Title">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textColor">?textColorPrimary</item>
		<item name="android:textSize">@dimen/font_big</item>
	</style>

	<style name="CollapsingHeader_Info" parent="CollapsingHeader_Title">
		<item name="android:layout_marginTop">@dimen/spacing_tiny</item>
		<item name="android:textSize">@dimen/font_normal</item>
		<item name="android:textColor">?textColorSecondary</item>
	</style>

	<style name="CollapsingHeader_AppbarShadow">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">80dp</item>
		<item name="android:background">@drawable/collapsing_toolbar_gradient_black</item>
	</style>

</resources>
