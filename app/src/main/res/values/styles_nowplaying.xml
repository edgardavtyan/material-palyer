<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="NowPlaying_Container">
		<item name="android:background">?colorPrimary</item>
	</style>

	<style name="NowPlaying_TrackInfo_Container">
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingBottom">@dimen/spacing_tiny</item>
		<item name="android:paddingTop">@dimen/spacing_medium</item>
		<item name="android:background">?colorPrimary</item>
	</style>

	<style name="NowPlaying_TrackInfo_Title">
		<item name="android:layout_marginLeft">15dp</item>
		<item name="android:textSize">@dimen/font_big</item>
		<item name="android:textColor">?textColorContrastPrimary</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="NowPlaying_TrackInfo_Info" parent="NowPlaying_TrackInfo_Title">
		<item name="android:layout_marginLeft">@dimen/spacing_medium</item>
		<item name="android:textSize">@dimen/font_normal</item>
		<item name="android:textColor">?textColorContrastSecondary</item>
	</style>

	<style name="NowPlaying_Seekbar">
		<item name="android:paddingLeft">0dp</item>
		<item name="android:paddingRight">0dp</item>
		<item name="android:padding">0dp</item>
		<item name="paddingEnd">0dp</item>
		<item name="paddingStart">0dp</item>
		<item name="thumbColor">?colorAccent</item>
		<item name="progressBackgroundColor">?textColorContrastPrimary</item>
		<item name="progressColor">?colorAccent</item>
	</style>

	<style name="NowPlaying_Time_Container">
		<item name="android:background">?colorPrimary</item>
		<item name="android:paddingTop">@dimen/spacing_tiny</item>
		<item name="android:paddingBottom">@dimen/spacing_tiny</item>
		<item name="android:layout_marginBottom">-9dp</item>
	</style>

	<style name="NowPlaying_Time_Current">
		<item name="android:layout_marginLeft">@dimen/spacing_medium</item>
		<item name="android:textColor">?textColorContrastPrimary</item>
	</style>

	<style name="NowPlaying_Time_Total">
		<item name="android:layout_marginRight">@dimen/spacing_medium</item>
		<item name="android:textColor">?textColorContrastPrimary</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="NowPlaying_Control">
		<item name="android:background">@drawable/ripple_primary</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:tint">?textColorContrastPrimary</item>
	</style>

</resources>