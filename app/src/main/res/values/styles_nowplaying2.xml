<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="NowPlaying_Container">
		<item name="android:background">?colorPrimaryDark</item>
	</style>

	<style name="NowPlaying_TrackInfo_Container">
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">@dimen/spacing_medium</item>
		<item name="android:paddingRight">@dimen/spacing_medium</item>
		<item name="android:paddingBottom">@dimen/spacing_tiny</item>
		<item name="android:paddingTop">@dimen/spacing_medium</item>
		<item name="android:background">?colorPrimary</item>
	</style>

	<style name="NowPlaying_TrackInfo_Title">
		<item name="android:textSize">@dimen/font_big</item>
		<item name="android:textColor">?textColorContrastPrimary</item>
		<item name="android:singleLine">true</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="NowPlaying_TrackInfo_Info" parent="NowPlaying_TrackInfo_Title">
		<item name="android:textSize">@dimen/font_normal</item>
		<item name="android:textColor">?textColorContrastSecondary</item>
		<item name="android:layout_marginTop">@dimen/spacing_tiny</item>
	</style>

	<style name="NowPlaying_Control">
		<item name="android:background">@drawable/ripple_primary</item>
		<item name="android:layout_width">0dp</item>
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
		<item name="android:tint">?textColorContrastPrimary</item>
	</style>

</resources>