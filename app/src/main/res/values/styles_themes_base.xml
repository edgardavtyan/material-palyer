<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Theme -->

    <style name="AppTheme">
        <item name="android:textColor">?textPrimary</item>
        <item name="android:textColorPrimary">?textColorPrimary</item>
        <item name="android:textColorSecondary">?textColorSecondary</item>

        <item name="colorControlNormal">?textColorPrimary</item>
        <item name="colorControlActivated">?colorPrimary</item>

        <item name="morphButtonStyle">@style/Widget.MorphButton</item>
    </style>

    <!-- Light Theme -->

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textPrimary">#de000000</item>
        <item name="textSecondary">#8a000000</item>
        <item name="textColorPrimary">#ffffff</item>
        <item name="textColorSecondary">#B2ffffff</item>
        <item name="actionOverflowMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>

        <item name="android:textColor">?textPrimary</item>
        <item name="android:textColorPrimary">?textColorPrimary</item>
        <item name="android:textColorSecondary">?textSecondary</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">?textColorPrimary</item>
        <item name="colorControlActivated">?colorPrimary</item>

        <item name="morphButtonStyle">@style/Widget.MorphButton</item>
    </style>

    <!-- Dark Theme -->

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="textPrimary">#ffffff</item>
        <item name="textSecondary">#b2ffffff</item>
        <item name="textColorPrimary">#ffffff</item>
        <item name="textColorSecondary">#B2ffffff</item>
        <item name="actionOverflowMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>

        <item name="android:textColor">?textPrimary</item>
        <item name="android:textColorPrimary">?textColorPrimary</item>
        <item name="android:textColorSecondary">?textSecondary</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">?textColorPrimary</item>
        <item name="colorControlActivated">?colorPrimary</item>

        <item name="morphButtonStyle">@style/Widget.MorphButton</item>
    </style>

    <!-- Black Theme -->

    <style name="AppTheme.Black" parent="Theme.AppCompat.NoActionBar">
        <item name="textPrimary">#ffffff</item>
        <item name="textSecondary">#b2ffffff</item>
        <item name="textColorPrimary">#ffffff</item>
        <item name="textColorSecondary">#B2ffffff</item>
        <item name="actionOverflowMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>

        <item name="android:textColor">?textPrimary</item>
        <item name="android:textColorPrimary">?textColorPrimary</item>
        <item name="android:textColorSecondary">?textSecondary</item>

        <item name="colorAccent">@color/accent</item>
        <item name="colorControlNormal">?textColorPrimary</item>
        <item name="colorControlActivated">?colorPrimary</item>

        <item name="morphButtonStyle">@style/Widget.MorphButton</item>
    </style>

</resources>