<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="AppTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorAccent">@color/accent</item>
		<item name="colorControlNormal">@color/black_dim_medium</item>
		<item name="colorControlActivated">?colorPrimary</item>
		<item name="prefCategoryTitleColor">?colorPrimary</item>

		<item name="textColorPrimary">@color/black_dim_slight</item>
		<item name="textColorSecondary">@color/black_dim_medium</item>
		<item name="textColorContrastPrimary">@color/white</item>
		<item name="textColorContrastSecondary">@color/white_dim_medium</item>
		<item name="android:textColor">?attr/textColorPrimary</item>
		<item name="android:textColorPrimary">?attr/textColorContrastPrimary</item>
		<item name="android:textColorSecondary">?attr/textColorSecondary</item>

		<item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="toolbarPopupTheme">@style/Theme.AppCompat.Light</item>
		<item name="nowPlayingBarBackground">?colorPrimary</item>

		<item name="actionOverflowMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
		<item name="actionBarPopupTheme">@style/LightHardwareMenuTheme</item>

		<item name="rippleContrast">@drawable/ripple_primary</item>
		<item name="collapsingHeaderGradient">@drawable/collapsing_toolbar_gradient_black</item>
	</style>

	<style name="LightHardwareMenuTheme" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
		<item name="android:textColorSecondary">?textColorPrimary</item>
	</style>

	<style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
		<item name="colorAccent">@color/accent</item>
		<item name="colorControlNormal">?attr/textColorContrastPrimary</item>
		<item name="colorControlActivated">?colorPrimary</item>
		<item name="prefCategoryTitleColor">?colorPrimary</item>

		<item name="textColorPrimary">@color/white</item>
		<item name="textColorSecondary">@color/white_dim_medium</item>
		<item name="textColorContrastPrimary">@color/white</item>
		<item name="textColorContrastSecondary">@color/white_dim_medium</item>
		<item name="android:textColor">?attr/textColorPrimary</item>
		<item name="android:textColorPrimary">?attr/textColorContrastPrimary</item>
		<item name="android:textColorSecondary">?attr/textColorSecondary</item>

		<item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="toolbarPopupTheme">@style/Theme.AppCompat</item>
		<item name="nowPlayingBarBackground">?colorPrimary</item>

		<item name="actionOverflowMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>

		<item name="rippleContrast">@drawable/ripple_primary</item>
		<item name="collapsingHeaderGradient">@drawable/collapsing_toolbar_gradient_black</item>
	</style>

	<style name="AppTheme.Black" parent="AppTheme.Dark">
		<item name="textColorPrimary">@color/white_dim_slight</item>
		<item name="textColorSecondary">@color/white_dim_medium</item>
		<item name="textColorContrastPrimary">@color/white</item>
		<item name="textColorContrastSecondary">@color/white_dim_medium</item>
		<item name="colorControlNormal">@color/white_dim_slight</item>
		<item name="android:windowBackground">@color/black</item>
		<item name="android:colorForeground">@color/white_dim_slight</item>
	</style>

</resources>
