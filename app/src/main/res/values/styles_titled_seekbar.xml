<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitledSeekbar_Section">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/spacing_tiny</item>
        <item name="android:paddingLeft">@dimen/spacing_medium</item>
    </style>

    <style name="TitledSeekbar_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">?android:textColor</item>
    </style>

    <style name="TitledSeekbar_Seekbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>