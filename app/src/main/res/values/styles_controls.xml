<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="nowplaying_control">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ripple_white</item>
        <item name="android:tint">?textColorPrimary</item>
    </style>

    <!-- Art -->

    <style name="nowplaying_art">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:src">@drawable/fallback_cover</item>
    </style>

    <style name="nowplaying_art_back" parent="nowplaying_art">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="nowplaying_art_tint">
        <item name="android:background">@color/transparent_gray_dark</item>
    </style>

</resources>