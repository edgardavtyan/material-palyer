<resources>

	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primaryDark</item>
		<item name="colorAccent">@color/black</item>
		<item name="colorControlNormal">@color/black</item>
		<item name="colorControlActivated">@color/black</item>
		<item name="prefCategoryTitleColor">@color/primary</item>
		<item name="fabIconColor">@color/black</item>

		<item name="textColorPrimary">@color/black_dim_slight</item>
		<item name="textColorSecondary">@color/black_dim_medium</item>
		<item name="textColorContrastPrimary">@color/white</item>
		<item name="textColorContrastSecondary">@color/white_dim_medium</item>
		<item name="android:textColor">?attr/textColorPrimary</item>
		<item name="android:textColorPrimary">?attr/textColorContrastPrimary</item>
		<item name="android:textColorSecondary">?attr/textColorSecondary</item>

		<item name="android:itemTextAppearance">@style/ItemTextAppearance</item>
		<item name="popupTheme">@style/PopupMenuStyle</item>

		<item name="toolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
		<item name="toolbarPopupTheme">@style/Theme.AppCompat.Light</item>
		<item name="nowPlayingBarBackground">?colorPrimary</item>

		<item name="android:alertDialogTheme">@style/Dialog</item>
		<item name="alertDialogTheme">@style/Dialog</item>

		<item name="actionOverflowMenuStyle">@style/Widget.AppCompat.Light.PopupMenu.Overflow</item>
		<item name="actionBarPopupTheme">@style/LightHardwareMenuTheme</item>

		<item name="rippleContrast">@drawable/ripple_primary</item>
		<item name="collapsingHeaderGradient">@drawable/collapsing_toolbar_gradient_black</item>

		<item name="iconMenuSearch">@drawable/ic_search_white</item>
		<item name="iconBackArrow">@drawable/ic_arrow_back_white</item>
	</style>

	<style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
		<item name="colorPrimary">@color/black</item>
		<item name="colorPrimaryDark">@color/black</item>
		<item name="colorControlNormal">@color/white</item>
		<item name="colorControlActivated">@color/white</item>
		<item name="android:textColorPrimary">@color/white</item>
		<item name="android:textColorSecondary">@color/white_dim_medium</item>

		<item name="android:itemTextAppearance">@style/ItemTextAppearance.Dark</item>
		<item name="popupTheme">@style/PopupMenuStyle.Dark</item>
		<item name="toolbarPopupTheme">@style/PopupMenuStyle.Dark</item>
		<item name="actionOverflowMenuStyle">@style/Widget.AppCompat.PopupMenu.Overflow</item>

		<item name="alertDialogTheme">@style/Dialog.Dark</item>
	</style>

	<style name="AppTheme.Dark.Transparent">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="AppTheme.Transparent">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<!-- Popup Menu -->

	<style name="PopupMenuStyle" parent="ThemeOverlay.AppCompat.ActionBar">
		<item name="android:popupBackground">@color/white</item>
	</style>

	<style name="PopupMenuStyle.Dark" parent="ThemeOverlay.AppCompat.ActionBar">
		<item name="android:popupBackground">@color/gray_dark</item>
	</style>

	<style name="ItemTextAppearance">
		<item name="android:textColor">@color/black</item>
	</style>

	<style name="ItemTextAppearance.Dark">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="LightHardwareMenuTheme" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
		<item name="android:textColorSecondary">?textColorPrimary</item>
	</style>

	<style name="Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/primary</item>
		<item name="buttonBarButtonStyle">@style/BarButton</item>
	</style>

	<style name="BarButton" parent="Base.Widget.AppCompat.Button.Borderless">
		<item name="android:textColor">@color/primary</item>
	</style>

	<style name="Dialog.Dark" parent="Theme.AppCompat.Dialog.Alert">
		<item name="colorAccent">@color/white</item>
		<item name="textColorPrimary">@color/white</item>
	</style>

</resources>
