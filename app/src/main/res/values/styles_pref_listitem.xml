<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="ListPreference_Container">
		<item name="android:orientation">vertical</item>
	</style>

	<style name="ListPreference_List">
		<item name="android:layout_marginTop">8dp</item>

	</style>

	<style name="ListPreference_ListItem_Container">
		<item name="android:orientation">horizontal</item>
		<item name="android:background">?selectableItemBackground</item>
		<item name="android:focusable">true</item>
		<item name="android:clickable">true</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:paddingTop">@dimen/spacing_tiny</item>
		<item name="android:paddingBottom">@dimen/spacing_tiny</item>
	</style>

	<style name="ListPreference_ListItem_RadioButton">

	</style>

	<style name="ListPreference_ListItem_TextContainer">
		<item name="android:layout_marginLeft">20dp</item>
		<item name="android:layout_marginTop">2dp</item>
		<item name="android:orientation">vertical</item>
	</style>

	<style name="ListPreference_ListItem_Title">
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:textSize">18sp</item>
	</style>

	<style name="ListPreference_ListItem_Summary">
		<item name="android:textColor">?textColorSecondary</item>
	</style>

</resources>
