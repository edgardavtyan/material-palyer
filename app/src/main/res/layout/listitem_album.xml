<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/listitem_menuContainer"
	>

	<ImageView
		android:id="@+id/art"
		android:contentDescription="@string/description_art"
		tools:src="@drawable/fallback_cover"
		style="@style/listitem_albumArt"
		/>

	<LinearLayout style="@style/listitem_infoContainer">

		<TextView
			android:id="@+id/title"
			tools:text="Album Title"
			style="@style/listitem_title"
			/>

		<TextView
			android:id="@+id/info"
			tools:text="Album Artist | 399 Tracks"
			style="@style/listitem_info"
			/>

	</LinearLayout>

	<ImageButton
		android:id="@+id/menu"
		android:contentDescription="@string/description_button_menu"
		style="@style/listitem_menu"
		/>

</LinearLayout>
