<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/primary">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/nowplaying_text_marginLeft"
        android:textColor="@color/text_on_primary"
        android:textSize="@dimen/nowplaying_title_textSize"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="Now Playing Track Title"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nowplaying_info_marginTop"
        android:layout_marginLeft="@dimen/nowplaying_text_marginLeft"
        android:textColor="@color/text_on_primary"
        android:textSize="@dimen/nowplaying_info_textSize"
        android:singleLine="true"
        android:ellipsize="end"
        tools:text="Artist Name - Album Name"/>

</LinearLayout>