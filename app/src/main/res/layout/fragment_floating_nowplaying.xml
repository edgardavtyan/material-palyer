<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/nowplaying_floating_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nowplaying_floating_height"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/nowplaying_floating_art"
        android:layout_width="@dimen/nowplaying_floating_height"
        android:layout_height="match_parent"/>

    <TextView
        android:id="@+id/nowplaying_floating_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:textSize="18sp"
        android:textColor="@color/colorTextPrimary"/>

    <ImageButton
        android:id="@+id/nowplaying_floating_control"
        android:layout_width="@dimen/nowplaying_floating_height"
        android:layout_height="match_parent"
        android:src="@drawable/ic_play_white_36dp"
        android:background="@drawable/nowplaying_control_ripple"/>
</LinearLayout>