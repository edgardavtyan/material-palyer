<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/listitem_menuContainer"
	>

	<ImageView
		android:id="@+id/art"
		style="@style/listitem_albumArt"
		android:src="@drawable/fallback_artist"
		/>

	<LinearLayout style="@style/listitem_infoContainer">

		<TextView
			android:id="@+id/title"
			style="@style/listitem_title"
			tools:text="Artist Name"
			/>

		<TextView
			android:id="@+id/info"
			style="@style/listitem_info"
			tools:text="Artist Info"
			/>

	</LinearLayout>

</LinearLayout>
