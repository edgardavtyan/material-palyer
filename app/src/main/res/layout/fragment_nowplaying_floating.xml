<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/container"
	style="@style/nowplayingBar_container"
	>

	<ImageView
		android:id="@+id/art"
		android:contentDescription="@string/description_art"
		tools:background="#333"
		style="@style/nowplayingBar_art"
		/>

	<LinearLayout
		android:id="@+id/infoWrapper"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		style="@style/nowplayingBar_infoWrapper"
		>

		<TextView
			android:id="@+id/title"
			tools:text="Current Track Title"
			style="@style/nowplayingBar_title"
			/>

		<TextView
			android:id="@+id/info"
			tools:text="Current Artist - Current Album"
			style="@style/nowplayingBar_info"
			/>

	</LinearLayout>

	<ImageButton
		android:id="@+id/playPause"
		android:layout_width="@dimen/size_medium"
		android:layout_height="match_parent"
		android:contentDescription="@string/description_control_playPause"
		style="@style/nowplayingBar_playPause"
		/>

</LinearLayout>
