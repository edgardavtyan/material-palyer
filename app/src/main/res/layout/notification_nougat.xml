<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>

	<LinearLayout
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
		android:layout_gravity="center_vertical"
		>

		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000"
			android:text="@string/notification_defaultText_title"
			android:lines="1"
			android:ellipsize="end"
			/>

		<TextView
			android:id="@+id/info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#555"
			android:text="@string/notification_defaultText_info"
			android:ellipsize="end"
			android:lines="1"
			/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="right"
		android:layout_gravity="center_vertical"
		>

		<ImageButton
			android:id="@+id/rewind"
			android:src="@drawable/ic_skip_prev"
			android:contentDescription="@string/description_control_rewind"
			style="@style/Notification_Control"
			/>

		<ImageButton
			android:id="@+id/play_pause"
			android:src="@drawable/ic_play"
			android:contentDescription="@string/description_control_playPause"
			style="@style/Notification_Control.Play_Pause"
			/>

		<ImageButton
			android:id="@+id/fast_forward"
			android:src="@drawable/ic_skip_next"
			android:contentDescription="@string/description_control_fastForward"
			style="@style/Notification_Control.Fast_Forward"
			/>

		<ImageView
			android:id="@+id/art"
			android:layout_width="36dp"
			android:layout_height="36dp"
			android:contentDescription="@string/description_art"
			android:src="@drawable/fallback_cover"
			/>

	</LinearLayout>

</LinearLayout>