<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:title="@string/audio_effects_title"
            app:titleTextColor="@color/text_onPrimary"
            />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/equalizer_title"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/font_medium"
            />

        <Spinner
            android:id="@+id/presets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            tools:listitem="@layout/spinner_equalizer_preset"
            />

    </LinearLayout>

    <com.edavtyan.materialplayer.app.views.Equalizer
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>