<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >

    <include layout="@layout/layout_toolbar" />

    <LinearLayout style="@style/AudioEffects_Section">

        <TextView
            android:text="@string/equalizer_title"
            style="@style/AudioEffects_SectionEqualizer"
            />

        <Switch
            android:id="@+id/equalizer_switch"
            style="@style/AudioEffects_SectionSwitch"
            />

    </LinearLayout>

    <com.edavtyan.materialplayer.app.views.EqualizerView
        android:id="@+id/equalizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <com.edavtyan.materialplayer.app.views.TitledSeekbarView
        android:id="@+id/surround"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:text="@string/surround_title"
        />

</LinearLayout>