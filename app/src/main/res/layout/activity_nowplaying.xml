<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:title="@string/nowplaying_toolbar_title"
            app:titleTextColor="@color/text_on_primary"/>

    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/art_frame"
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:id="@+id/art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@drawable/fallback_cover"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/nowplaying_art_tint"/>

        <ImageView
            android:id="@+id/art_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fallback_cover"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <View
            android:id="@+id/aligner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true"/>

        <LinearLayout
            android:id="@+id/info_wrapper"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignBottom="@id/aligner"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:background="@color/primary"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/nowplaying_text_marginLeft"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/nowplaying_title_textSize"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="Now Playing Track Title"/>

            <TextView
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/nowplaying_info_marginTop"
                android:layout_marginLeft="@dimen/nowplaying_text_marginLeft"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/nowplaying_info_textSize"
                android:singleLine="true"
                android:ellipsize="end"
                tools:text="Artist Name - Album Name"/>

        </LinearLayout>

        <fragment
            android:id="@+id/fragment_controls"
            android:name="com.edavtyan.materialplayer.app.fragments.PlaybackControlsFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignTop="@id/aligner"
            android:layout_alignParentBottom="true"
            tools:layout="@layout/fragment_playback_controls"/>

        <fragment
            android:id="@+id/fragment_seekbar"
            android:name="com.edavtyan.materialplayer.app.fragments.PlayerSeekbarFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:layout="@layout/fragment_seekbar"/>

        <!--<app.minimize.com.seek_bar_compat.SeekBarCompat-->
            <!--android:id="@+id/seekbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:paddingLeft="0dp"-->
            <!--android:paddingRight="0dp"-->
            <!--app:thumbColor="@color/accent"-->
            <!--app:progressColor="@color/accent"-->
            <!--tools:progress="40"/>-->

    </RelativeLayout>

</LinearLayout>