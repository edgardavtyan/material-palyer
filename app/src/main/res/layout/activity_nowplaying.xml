<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	style="@style/NowPlaying_MainContainer"
	>

	<android.support.design.widget.FloatingActionButton
		android:id="@+id/fab"
		style="@style/NowPlaying_FAB"
		/>

	<LinearLayout style="@style/NowPlaying_InnerContainer">

		<include layout="@layout/partial_appbar_transparent" />

		<FrameLayout style="@style/NowPlaying_ArtWrapper">

			<com.edavtyan.materialplayer.lib.views.SquareImageView
				android:id="@+id/art"
				tools:src="@drawable/fallback_cover"
				style="@style/NowPlaying_Art"
				/>

			<include layout="@layout/shadow_bottom_small" />

		</FrameLayout>

		<LinearLayout
			android:id="@+id/info_container"
			style="@style/NowPlaying_TrackInfo_Container"
			>

			<TextView
				android:id="@+id/title"
				tools:text="Now Playing Track Title"
				style="@style/NowPlaying_TrackInfo_Title"
				/>

			<TextView
				android:id="@+id/info"
				tools:text="Now Playing Track Info"
				style="@style/NowPlaying_TrackInfo_Info"
				/>

		</LinearLayout>

		<LinearLayout style="@style/NowPlaying_Time_Container">

			<TextView
				android:id="@+id/time_current"
				tools:text="1:14"
				style="@style/NowPlaying_Time_Current"
				/>

			<TextView
				android:id="@+id/time_total"
				tools:text="6:44"
				style="@style/NowPlaying_Time_Total"
				/>

		</LinearLayout>

		<app.minimize.com.seek_bar_compat.SeekBarCompat
			android:id="@+id/seekbar"
			tools:progress="30"
			style="@style/NowPlaying_Seekbar"
			/>

		<LinearLayout style="@style/NowPlaying_ControlsContainer">

			<ImageButton
				android:id="@+id/shuffle"
				android:layout_marginLeft="-12dp"
				android:src="@drawable/ic_shuffle"
				style="@style/NowPlaying_Control"
				/>

			<ImageButton
				android:id="@+id/rewind"
				android:src="@drawable/ic_skip_prev"
				style="@style/NowPlaying_Control"
				/>

			<ImageButton
				android:id="@+id/play_pause"
				android:src="@drawable/ic_play"
				style="@style/NowPlaying_Control"
				/>

			<ImageButton
				android:id="@+id/fast_forward"
				android:src="@drawable/ic_skip_next"
				style="@style/NowPlaying_Control"
				/>

			<ImageButton
				android:id="@+id/repeat"
				android:layout_marginRight="-12dp"
				android:src="@drawable/ic_repeat"
				style="@style/NowPlaying_Control"
				/>

		</LinearLayout>

	</LinearLayout>

</android.support.design.widget.CoordinatorLayout>