<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout style="@style/AudioEffects_Section">

        <TextView
            android:text="@string/equalizer_title"
            style="@style/AudioEffects_SectionEqualizer"
            />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/equalizer_switch"
            style="@style/AudioEffects_SectionSwitch"
            />

    </LinearLayout>

    <com.edavtyan.materialplayer.app.views.EqualizerView
        android:id="@+id/equalizer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        android:layout_marginBottom="@dimen/spacing_tiny"
        />

</LinearLayout>
