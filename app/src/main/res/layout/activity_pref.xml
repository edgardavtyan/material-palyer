<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<include layout="@layout/partial_appbar" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			>

			<com.edavtyan.prefs.category.PreferenceCategory
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cp_title="@string/pref_category_appearance"
				app:cp_color="?prefCategoryTitleColor"
				>

				<com.edavtyan.prefs.simple_list.SimpleListPreference
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cp_key="@string/pref_theme_base_key"
					app:cp_title="@string/pref_theme_base_title"
					app:cp_summary="@string/pref_theme_base_summary"
					app:cp_defaultValue="@string/pref_theme_base_default"
					app:cp_entries="@array/pref_theme_base_entries"
					app:cp_entryValues="@array/pref_theme_base_entries"
					/>

				<com.edavtyan.prefs.color.ColorSelectionPreference
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cp_key="@string/pref_theme_primary_key"
					app:cp_title="@string/pref_theme_primary_title"
					app:cp_summary="@string/pref_theme_primary_summary"
					app:cp_defaultValue="@string/pref_theme_primary_default"
					app:cp_entries="@array/pref_theme_primary_entries"
					app:cp_entryValues="@array/pref_theme_primary_values"
					/>

				<com.edavtyan.prefs.checkbox.CheckboxPreference
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cp_key="@string/pref_compact_list_key"
					app:cp_title="@string/pref_compact_list_title"
					app:cp_defaultValue="@bool/pref_compact_list_default"
					/>

				<com.edavtyan.prefs.checkbox.CheckboxPreference
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cp_key="@string/pref_compact_detail_key"
					app:cp_title="@string/pref_compact_detail_title"
					app:cp_defaultValue="@bool/pref_compact_detail_default"
					/>

				<com.edavtyan.prefs.checkbox.CheckboxPreference
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cp_key="@string/pref_compact_main_key"
					app:cp_title="@string/pref_compact_main_title"
					app:cp_defaultValue="@bool/pref_compact_main_default"
					/>

			</com.edavtyan.prefs.category.PreferenceCategory>

			<com.edavtyan.prefs.category.PreferenceCategory
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				app:cp_title="@string/pref_category_playback"
				app:cp_color="?prefCategoryTitleColor"
				>

				<com.edavtyan.prefs.checkbox.CheckboxPreference
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					app:cp_key="@string/pref_play_on_headset_plug_key"
					app:cp_title="@string/pref_play_on_headset_plug_title"
					app:cp_defaultValue="@bool/pref_play_on_headset_plug_default"
					/>

			</com.edavtyan.prefs.category.PreferenceCategory>

		</LinearLayout>

	</ScrollView>

</LinearLayout>